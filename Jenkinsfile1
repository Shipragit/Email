
pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "Build is complete"
            }
        }
    }
    post {
        always {
            emailext(
                subject: "Build Status",
                body: '''<html>
                            <body>
                                <p>Build Status: ${currentBuild.currentResult}</p>
                            </body>
                        </html>''',
                to: 'shiva291291@gmail.com',
                from: 'shiva291291@gmail.com',
                replyTo: 'shiva291291@gmail.com',
                mimeType: 'text/html'
            )
        }
    }
}
